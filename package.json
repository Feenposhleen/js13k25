{
  "name": "js13kgame",
  "version": "1.0.0",
  "description": "JS13K entry",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf -g \"dist/*.*\"",
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "preview": "serve dist -l 5173 -s",
    "pack": "bestzip dist/game.zip dist/index.html",
    "shrinkzip": "advzip --recompress --shrink-extra -4 -i 200 dist/game.zip || echo advzip-skip",
    "size": "node -e \"const s=require('fs').statSync('dist/game.zip').size;console.log((s/1024).toFixed(1)+' KB')\"",
    "release": "npm run clean && npm run build && npm run pack && npm run shrinkzip && npm run size"
  },
  "keywords": [
    "game",
    "js",
    "js13k"
  ],
  "author": "Charlie Norin",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "advzip-bin": "^1.0.0",
    "bestzip": "^2.2.1",
    "concurrently": "^8.2.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2",
    "rollup-plugin-glslify": "^1.3.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^3.0.0",
    "serve": "^10.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "watch": "^0.13.0"
  }
}
